  <div class="container">
    <h1>¬øQu√© d√≠a fue?</h1>
    
    <label for="dia">D√≠a</label>
    <input type="number" id="dia" min="1" max="31">

    <label for="mes">Mes</label>
    <input type="number" id="mes" min="1" max="12">

    <label for="anio">A√±o</label>
    <input type="number" id="anio">

    <button onclick="calcularDia()">Calcular</button>

    <div class="resultado" id="resultado"></div>
  </div>

  <script>
    function zeller(dia, mes, anio) {
      if (mes === 1 || mes === 2) {
        mes += 12;
        anio -= 1;
      }

      let q = dia;
      let m = mes;
      let K = anio % 100;
      let J = Math.floor(anio / 100);

      let h_sin_modulo = q + Math.floor((13 * (m + 1)) / 5) + K + Math.floor(K / 4) + Math.floor(J / 4) + (5 * J);
      let h = h_sin_modulo % 7;
      let dias = ['S√°bado', 'Domingo', 'Lunes', 'Martes', 'Mi√©rcoles', 'Jueves', 'Viernes'];

      return {
        modulo: h,
        dia: dias[h]
      };
    }

    function calcularDia() {
      const dia = parseInt(document.getElementById('dia').value);
      const mes = parseInt(document.getElementById('mes').value);
      const anio = parseInt(document.getElementById('anio').value);

      if (!dia || !mes || !anio) {
        document.getElementById('resultado').innerHTML = "‚ö†Ô∏è Por favor, completa todos los campos.";
        return;
      }

      const resultado = zeller(dia, mes, anio);

      document.getElementById('resultado').innerHTML = `
        üìÖ <strong>Fecha:</strong> ${dia.toString().padStart(2, '0')}/${mes.toString().padStart(2, '0')}/${anio}<br>
        ‚ûó <strong>M√≥dulo 7:</strong> ${resultado.modulo}<br>
        üóìÔ∏è <strong>D√≠a de la semana:</strong> ${resultado.dia}
      `;
    }
  </script>
